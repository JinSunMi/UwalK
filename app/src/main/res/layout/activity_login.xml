<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/gray1"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/txt_sign_in"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_sign_in"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_main_26dp"
        android:textSize="14sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:hint="Email"
        android:textColor="@color/black"
        android:id="@+id/edit_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_email"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_main_26dp"
        android:textSize="14sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:hint="Password"
        android:textColor="@color/black"
        android:id="@+id/edit_password"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/btn_sign_in"
        android:textColor="@color/white"
        android:background="@drawable/background_26dp"
        android:backgroundTint="@color/main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_password"
        android:layout_marginTop="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="@color/gray4"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_in"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_or"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_or"
        app:layout_constraintTop_toTopOf="@+id/txt_or"
        app:layout_constraintBottom_toBottomOf="@+id/txt_or"
        android:layout_marginRight="10dp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_or"
        app:layout_constraintTop_toTopOf="@+id/txt_or"
        app:layout_constraintBottom_toBottomOf="@+id/txt_or"
        android:layout_marginLeft="10dp" />


    <LinearLayout
        android:background="@drawable/background_main_26dp"
        android:id="@+id/btn_google_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="54dp"
        android:gravity="center"
        android:padding="14dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/google"
            android:layout_marginRight="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In with google"
            android:textColor="@color/main"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="28dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/gray4"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/txt_sign_up"
            android:textColor="@color/main"
            android:textSize="14sp"
            android:layout_marginLeft="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>