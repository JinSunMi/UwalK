<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/gray1"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/up_txt_sign_up"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_main_26dp"
        android:textSize="14sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:hint="Name"
        android:textColor="@color/black"
        android:id="@+id/up_edit_name"
        android:layout_marginRight="6dp"
        app:layout_constraintTop_toBottomOf="@id/up_txt_sign_up"
        android:layout_weight="1"
        android:maxLines="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_edit_name"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_main_26dp"
        android:textSize="14sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:hint="Email"
        android:textColor="@color/black"
        android:id="@+id/up_edit_email"
        android:maxLines="1"
        android:inputType="textEmailAddress" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_edit_email"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_main_26dp"
        android:textSize="14sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:hint="Password"
        android:textColor="@color/black"
        android:id="@+id/up_edit_password"
        android:maxLines="1"
        android:inputType="textPassword" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_edit_password"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_main_26dp"
        android:textSize="14sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="20dp"
        android:hint="Confirm Password"
        android:textColor="@color/black"
        android:id="@+id/up_edit_confirm_password"
        android:maxLines="1"
        android:inputType="textPassword"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_edit_confirm_password"
        android:id="@+id/up_btn_check">
        <CheckBox
            android:id="@+id/cbAndroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I Agree with "
            android:textColor="@color/gray4"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="privacy"
            android:textSize="12sp"
            android:textColor="@color/main"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/up_check_privacy"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" and "
            android:textSize="12sp"
            android:textColor="@color/gray4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="policy"
            android:textSize="12sp"
            android:textColor="@color/main"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/up_check_policy"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/up_btn_sign_up"
        android:textColor="@color/white"
        android:background="@drawable/background_main_26dp"
        android:backgroundTint="@color/main"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up_btn_check"
        android:layout_marginTop="72dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="28dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/gray4"
            android:textSize="12sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/up_txt_sign_in"
            android:textColor="@color/main"
            android:textSize="14sp"
            android:layout_marginLeft="16dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>