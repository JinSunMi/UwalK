<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryActivity">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/flip">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_flipper_1"
            android:scaleType="centerCrop"
            android:id="@+id/flip_image_1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_flipper_2"
            android:scaleType="centerCrop"
            android:id="@+id/flip_image_2"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_flipper_3"
            android:scaleType="centerCrop"
            android:id="@+id/flip_image_3"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_flipper_4"
            android:scaleType="centerCrop"
            android:id="@+id/flip_image_4"/>
    </ViewFlipper>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="17dp"
        android:text="SKIP"
        android:textColor="@color/gray5"
        android:textSize="16sp"
        android:id="@+id/txt_skip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:textColor="@color/main"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        android:id="@+id/txt_start" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="44dp" >
        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/background_main_circle_width_2dp"
            android:id="@+id/flip_circle_1"
            android:layout_margin="5dp"/>
        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/background_solid_gray_circle"
            android:id="@+id/flip_circle_2"
            android:layout_margin="5dp"/>
        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/background_solid_gray_circle"
            android:id="@+id/flip_circle_3"
            android:layout_margin="5dp"/>
        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/background_solid_gray_circle"
            android:id="@+id/flip_circle_4"
            android:layout_margin="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>